	def usage(self):
	
		print
		print "This is a simple python script that creates a 2 seconds avi file" 
		print "for each channel from the specified band name number."
		print
		print "USAGE: ./chanscanner BANDNAMENUMBER"
		print
		print "BANDNAMENUMBER:"
		print
