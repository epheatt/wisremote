		self.bandname=None

	# This is the main method of the application.
	
	def main(self):	
		self.readArgs()
		self.checkGorecord()
		self.startScan()

	# This method validates the argument given by the user.
	
	def readArgs(self):
					
		if (len(sys.argv[1:])>1 or len(sys.argv[1:])==0):
			self.usage()
			sys.exit(2)
		else:
			self.validateArg(sys.argv[1],1,25)


	# This method simply checks if arg is an integer and, if minv and maxv values are included on the method call,
	# it also checks if the arg value is between them.
	
	def validateArg(self,arg,minv=0,maxv=0):
		try:
			number=int(arg)

			if ((minv!=maxv) and (number < minv or number > maxv)):
				self.usage()
				sys.exit(2)
			else:
				self.bandname=self.getBandName(number)
		
		except:
			self.usage()
			sys.exit(2)	
	
	# This method returns a string with the correspoding band name for the given number.
	def getBandName(self,number):

		bn=""

		if(number==1): 
			bn="ntsc-bcast"
		elif(number==2): 
			bn="ntsc-cable"
		elif(number==3): 
			bn="us-bcast"
		elif(number==4): 
			bn="us-cable"
		elif(number==5): 
			bn="ntsc-cable-hrc"
		elif(number==6): 
			bn="ntsc-hrc"
		elif(number==7): 
			bn="us-cable-hrc"
		elif(number==8): 
			bn="us-hrc"
		elif(number==9): 
			bn="ntsc-bcast-jp"
		elif(number==10): 
			bn="ntsc-cable-jp"
		elif(number==11): 
			bn="japan-bcast"
		elif(number==12): 
			bn="japan-cable"
		elif(number==13): 
			bn="europe-west"
		elif(number==14): 
			bn="europe-east"
		elif(number==15): 
			bn="europe"
		elif(number==16): 
			bn="pal-ireland"
		elif(number==17): 
			bn="ireland"
		elif(number==18): 
			bn="pal-italy"
		elif(number==19): 
			bn="italy"
		elif(number==20): 
			bn="pal-dk"
		elif(number==21): 
			bn="pal-dk-cable"
		elif(number==22): 
			bn="secam-france"
		elif(number==23): 
			bn="france"
		elif(number==24): 
			bn="secam-russia"
		elif(number==25): 
			bn="russia"
				
		return bn
		
