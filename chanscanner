	# This method checks if gorecord is in the path.
	
	def checkGorecord(self):

		cmd = os.popen('which gorecord')
		x = cmd.readlines()
		gorecordfound=False

		for y in x:
			   gorecordfound=True
			   break
			   
		if (gorecordfound==False):
			print
			print "***** GORECORD ERROR *****"
			print
			print "Sorry, gorecord is not installed on the system."
			print
			print "You need to add gorecord (included with the "
			print "go7007 driver) to your system's path."
			print
			
			sys.exit(2)
			
	# This method starts the scan.
		
	def startScan(self):
		os.system('mkdir captures')
		for x in self.channels[self.bandname]:
			cmd = 'gorecord -input 2 -tvchan '+self.bandname+':'+x+' -duration 2 -format mjpeg captures/ch'+x+'.avi'
			os.system(cmd)

# Used to point the main method of the application:

if __name__ == '__main__':
	ChanScanner().main()
